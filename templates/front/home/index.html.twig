{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<h1>Accueil</h1>
	<h2>Nos produits</h2>
	<div class='d-flex justify-content-between flex-wrap gap-3'>
		{% for produit in produits %}
			<div class='card' style="width: 18rem;">
				<img src={{produit.image}} class="card-img-top" alt="">
				<div class="card-body">
					<h3 class="card-title">{{produit.name}}</h3>
					<p class="card-text">{{produit.description|slice(0, 50)}}...</p>
					<a href={{ path('front_home_new', {'id': produit.id} ) }} class="btn btn-primary">En savoir plus</a>

				</div>
			</div>
		{% endfor %}
	</div>
	<div class="navigation">
		{{ knp_pagination_render(produits) }}
	</div>

{% endblock %}
